{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Statistiques -->
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Zones</h5>
                    <h2 class="card-text">{{ stats.total_zones }}</h2>
                    <a href="{{ path('app_zone_index') }}" class="btn btn-light">Voir toutes les zones</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Déchets</h5>
                    <h2 class="card-text">{{ stats.total_dechets }}</h2>
                    <a href="{{ path('app_dechet_index') }}" class="btn btn-light">Voir tous les déchets</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Collectes</h5>
                    <h2 class="card-text">{{ stats.total_collectes }}</h2>
                    <a href="{{ path('app_collecte_index') }}" class="btn btn-light">Voir toutes les collectes</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Utilisateur</h5>
                    <h2 class="card-text">{{ app.user.prenom }} {{ app.user.nom }}</h2>
                    <p class="card-text">{{ app.user.email }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Dernières collectes -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Dernières collectes</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Zone</th>
                                    <th>Déchet</th>
                                    <th>Quantité</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for collecte in stats.last_collectes %}
                                <tr>
                                    <td>{{ collecte.dateCollecte|date('d/m/Y') }}</td>
                                    <td>{{ collecte.zone.nom }}</td>
                                    <td>{{ collecte.typeDechets }}</td>
                                    <td>{{ collecte.statut }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
