{% extends 'base.html.twig' %}

{% block title %}Signalement index{% endblock %}

{% block body %}
    <h1>Signalement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Lieu</th>
                <th>DateSignalement</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for signalement in signalements %}
            <tr>
                <td>{{ signalement.id }}</td>
                <td>{{ signalement.description }}</td>
                <td>{{ signalement.lieu }}</td>
                <td>{{ signalement.dateSignalement ? signalement.dateSignalement|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ signalement.etat }}</td>
                <td>
                    <a href="{{ path('app_yes_show', {'id': signalement.id}) }}">show</a>
                    <a href="{{ path('app_yes_edit', {'id': signalement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_yes_new') }}">Create new</a>
{% endblock %}
