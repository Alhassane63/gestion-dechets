{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Mon Profil</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Email</h5>
                            <p>{{ user.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Nom</h5>
                            <p>{{ user.nom }}</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <h5>Prénom</h5>
                            <p>{{ user.prenom }}</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Téléphone</h5>
                            <p>{{ user.telephone }}</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <h5>Adresse</h5>
                            <p>{{ user.adresse }}</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <h5>Rôle</h5>
                            <p>{{ user.role }}</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('app_logout') }}" class="btn btn-danger">Se déconnecter</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
