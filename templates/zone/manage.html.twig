{% extends 'base.html.twig' %}

{% block title %}Gestion des zones{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Gestion des zones</h1>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Zones</h6>
            <a href="{{ path('app_zone_new') }}" class="btn btn-primary btn-sm float-right">Nouvelle zone</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Nombre de points</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for zone in zones %}
                        <tr>
                            <td>{{ zone.nom }}</td>
                            <td>{{ zone.collectes|length }}</td>
                            <td>
                                <a href="{{ path('app_zone_show', {'id': zone.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('app_zone_edit', {'id': zone.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
</script>
{% endblock %}
