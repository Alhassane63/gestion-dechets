{% extends 'base.html.twig' %}

{% block title %}Signalement #{{ signalement.id }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1>Signalement #{{ signalement.id }}</h1>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Type de problème</h5>
                            <p>{{ signalement.type|title }}</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Date</h5>
                            <p>{{ signalement.dateSignalement|date('d/m/Y H:i') }}</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <h5>Description</h5>
                            <p>{{ signalement.description }}</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <h5>État</h5>
                            <span class="badge {% if signalement.etat == 'nouveau' %}bg-warning{% elseif signalement.etat == 'en_cours' %}bg-info{% else %}bg-success{% endif %}">
                                {{ signalement.etat|title }}
                            </span>
                        </div>
                        <div class="col-md-6">
                            <h5>Statut</h5>
                            <span class="badge {% if signalement.statut == 'nouveau' %}bg-warning{% elseif signalement.statut == 'en_cours' %}bg-info{% else %}bg-success{% endif %}">
                                {{ signalement.statut|title }}
                            </span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <h5>Citoyen</h5>
                            <p>{{ signalement.citoyen.prenom }} {{ signalement.citoyen.nom }}</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Zone</h5>
                            <p>{{ signalement.zone.nom }}</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <h5>Photo</h5>
                            {% if signalement.photo %}
                            <img src="{{ signalement.photo }}" alt="Photo du problème" class="img-fluid rounded" style="max-height: 300px;">
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <h5>Commentaire de traitement</h5>
                            <p>{{ signalement.commentaireTraitement ?: 'Aucun commentaire' }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <a href="{{ path('app_signalement_edit', {'id': signalement.id}) }}" class="btn btn-warning">Modifier</a>
                <a href="{{ path('app_signalement_index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
