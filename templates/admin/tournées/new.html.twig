{% extends 'admin/base.html.twig' %}

{% block admin_content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Nouvelle tournée</h1>
        <a href="{{ path('app_tournee_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.zone) }}
                        {{ form_widget(form.zone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.zone) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.date) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.date) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.heureDebut) }}
                        {{ form_widget(form.heureDebut, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.heureDebut) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.heureFin) }}
                        {{ form_widget(form.heureFin, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.heureFin) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.agent) }}
                        {{ form_widget(form.agent, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.agent) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.active) }}
                        {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_errors(form.active) }}
                    </div>
                </div>
            </div>
            <div class="mt-3">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
