{% extends 'base.html.twig' %}

{% block title %}Citoyen - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_citoyen_dashboard') }}">
                                <i class="fas fa-tachometer-alt"></i>
                                Tableau de bord
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_citoyen_tournées') }}">
                                <i class="fas fa-route"></i>
                                Tournées
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_citoyen_signalements') }}">
                                <i class="fas fa-exclamation-triangle"></i>
                                Mes signalements
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_citoyen_demandes') }}">
                                <i class="fas fa-plus-circle"></i>
                                Nouvelle demande
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                {% block citoyen_content %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}
