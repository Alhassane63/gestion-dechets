{% extends 'base.html.twig' %}

{% block title %}Liste des agents{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Liste des agents</h1>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Agents</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Zone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for agent in agents %}
                        <tr>
                            <td>{{ agent.prenom }} {{ agent.nom }}</td>
                            <td>{{ agent.email }}</td>
                            <td>{{ agent.zone.nom }}</td>
                            <td>
                                <a href="{{ path('app_agent_dashboard', {'id': agent.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
</script>
{% endblock %}
