{% extends 'base.html.twig' %}

{% block title %}Collecte #{{ collecte.id }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1>Collecte #{{ collecte.id }}</h1>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Date</h5>
                            <p>{{ collecte.dateCollecte|date('d/m/Y H:i') }}</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Date</label>
                        <p>{{ collecte.dateCollecte|date('d/m/Y H:i') }}</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Type de déchets</label>
                        <p>{{ collecte.typeDechets }}</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Statut</label>
                        <span class="badge {% if collecte.statut == 'planifie' %}bg-info{% elseif collecte.statut == 'en_cours' %}bg-warning{% else %}bg-success{% endif %}">
                            {{ collecte.statut|title }}
                        </span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Zone</label>
                        <p>{{ collecte.zone.nom }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Supprimer la collecte</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer cette collecte ? Cette action est irréversible.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i> Supprimer
                    </button>
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
