{% extends 'base-register.html.twig' %}

{% block title %}Choisissez votre rôle{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Choisissez votre rôle</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h4>Choisissez votre rôle</h4>
                        <p class="text-muted">Sélectionnez le rôle qui correspond à votre profil</p>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a href="{{ path('app_register_form', {'role': 'ROLE_AGENT'}) }}" class="card mb-3 text-center role-card">
                                <div class="card-body p-4">
                                    <i class="bi bi-truck text-warning" style="font-size: 2.5rem;"></i>
                                    <h5 class="card-title mt-3 mb-2">Agent de collecte</h5>
                                    <p class="text-muted small">Gérez les opérations de collecte et de traitement des déchets</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="{{ path('app_register_form', {'role': 'ROLE_CITOYEN'}) }}" class="card mb-3 text-center role-card">
                                <div class="card-body p-4">
                                    <i class="bi bi-person text-success" style="font-size: 2.5rem;"></i>
                                    <h5 class="card-title mt-3 mb-2">Citoyen</h5>
                                    <p class="text-muted small">Signalez et suivez les points de collecte près de chez vous</p>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <a href="{{ path('app_login') }}" class="btn btn-link">Déjà inscrit ? Se connecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .role-card {
        border: none;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        transition: transform 0.2s;
        text-decoration: none;
        color: inherit;
    }
    .role-card:hover {
        transform: translateY(-5px);
    }
    .role-card .card-body {
        padding: 1.5rem;
    }
    .role-card i {
        transition: transform 0.3s;
    }
    .role-card:hover i {
        transform: scale(1.1);
    }
    .role-card:hover {
        text-decoration: none;
        color: inherit;
    }
</style>
{% endblock %}
